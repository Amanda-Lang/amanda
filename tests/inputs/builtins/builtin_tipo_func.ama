

func mostra_tipo(arg : indef)
    arg_tipo : texto = tipo(arg)

    se arg_tipo == "int" entao
        mostra "eu sou um int"
    fim
    se arg_tipo == "texto" entao
        mostra "eu sou uma string"
    fim
    se arg_tipo == "bool" entao
        mostra "eu sou um bool"
    fim
    se arg_tipo == "real" entao
        mostra "eu sou um real"
    fim
fim


mostra_tipo(8)
mostra_tipo(8.7)
mostra_tipo(falso)
mostra_tipo("s")

#[output]:eu sou um int eu sou um real eu sou um bool eu sou uma string
