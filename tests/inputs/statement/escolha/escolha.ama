num_int : int = 1

escolha num_int:
    caso 1: 
        mostra 1
    caso 2: 
        mostra 2
    caso 3: 
        mostra 3
    caso 4: 
        mostra 4
    senao:
        mostra "erro"
fim


dia : texto = "s"


# Normal escolha
escolha dia:
    caso "segunda":
        mostra "s"
    caso "terca":
        mostra "s"
    caso "quarta":
        mostra "s"
    caso "quinta":
        mostra "s"
    caso "sexta":
        mostra "s"
    caso "sabado":
        mostra "s"
    caso "domingo":
        mostra "s"
    senao:
        mostra "inválido"
fim

# empty escolha
escolha dia: fim

#escolha with default
escolha dia: 
    senao:
        mostra "default"
fim


#Nested escolha


se verdadeiro entao
    escolha dia:
        caso "segunda":
            mostra "s"
        caso "terca":
            mostra "s"
        caso "quarta":
            mostra "s"
        caso "quinta":
            mostra "s"
        caso "sexta":
            mostra "s"
        caso "sabado":
            mostra "s"
        caso "domingo":
            mostra "s"
        senao:
            mostra "inválido"
    fim

fim
